<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                	<componentId
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Enter Component ID"
                        fieldLabel="Component ID"
                        name="./componentId"
						required="{Boolean}true"/>
                    <classname
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Enter Unique Classname"
                        fieldLabel="Unique Classname"
                        name="./classname"/>
                    <height
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Enter height"
                        fieldLabel="Height"
                        name="./height"/>
                     <borderstyle
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldDescription="Select Border Style"
                        fieldLabel="Border Style"
                        name="./borderstyle">
						<items jcr:primaryType="nt:unstructured">
                                    <none
                                        jcr:primaryType="nt:unstructured"
                                        text="None"
                                        value="none"/>
                                    <dotted
                                        jcr:primaryType="nt:unstructured"
                                        text="Dotted"
                                        value="dotted"/>
                                    <dashed
                                        jcr:primaryType="nt:unstructured"
                                        text="Dashed"
                                        value="dashed"/>
									<double
                                        jcr:primaryType="nt:unstructured"
                                        text="Double"
                                        value="double"/>
                                    <solid
                                        jcr:primaryType="nt:unstructured"
                                        text="Solid"
                                        value="solid"/>
                                    
                                    
                                </items>
						</borderstyle>
                     <bordercolor
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                        fieldDescription="Enter Border Color"
                        fieldLabel="Border Color"
                        name="./bordercolor"/>
					<backgroundcolor
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                        fieldDescription="Enter Background Color"
                        fieldLabel="Background Color"
                        name="./backgroundcolor"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>

