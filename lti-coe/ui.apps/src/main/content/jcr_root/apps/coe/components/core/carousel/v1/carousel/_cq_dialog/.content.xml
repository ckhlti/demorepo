<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="CTA Button"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container"
        margin="{Boolean}false">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}[false]">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:hideChildren="[properties]">
                    <common
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <componentid
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Component Id"
                                        fieldLabel="Component Id"
                                        name="./componentId"
                                        required="{Boolean}true"/>
                                    <uniqueclassname
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Enter CSS Classname to be added to the component wrapper"
                                        fieldLabel="Unique Class Name"
                                        name="./uniqueClassName"/>
                                    <indextype
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Select the Carousel variation"
                                        fieldLabel="Carousel Index Type"
                                        name="./indexType"
                                        required="{Boolean}false">
                                        <items jcr:primaryType="nt:unstructured">
                                            <dots
                                                jcr:primaryType="nt:unstructured"
                                                text="Index as Dots"
                                                value="dots"/>
                                            <bar
                                                jcr:primaryType="nt:unstructured"
                                                text="Index as bar"
                                                value="bar"/>
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                text="Index as slide title"
                                                value="title"/>
                                            <icon
                                                jcr:primaryType="nt:unstructured"
                                                text="Index as Icon"
                                                value="icon"/>
                                            <none
                                                jcr:primaryType="nt:unstructured"
                                                text="Hide the index"
                                                value="none"/>
                                        </items>
                                    </indextype>
                                    <sideArrows
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                        deleteHint="{Boolean}true"
                                        fieldLabel="Display Arrows"
                                        name="./displayArrows"
                                        vertical="{Boolean}false">
                                        <items jcr:primaryType="nt:unstructured">
                                            <yes
                                                jcr:primaryType="nt:unstructured"
                                                checked="{Boolean}true"
                                                text="Yes"
                                                value="yes"/>
                                            <no
                                                jcr:primaryType="nt:unstructured"
                                                text="No"
                                                value="no"/>
                                        </items>
                                    </sideArrows>
                                    <autoplay
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        checked="true"
                                        fieldDescription="If checked, automatically transition between slides."
                                        name="./autoPlay"
                                        text="Automatically transition slides"
                                        uncheckedValue="false"
                                        value="true"/>
                                    <autoplayGroup
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <alert
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/alert"
                                                size="S"
                                                text="Automatic transitions are previewed with the 'View as Published' page action."
                                                variant="info"/>
                                            <delay
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                fieldDescription="The delay (in milliseconds) before automatically transitioning to the next slide."
                                                fieldLabel="Transition Delay (milliseconds)"
                                                max="600000"
                                                min="0"
                                                name="./delay"
                                                step="100"
                                                value="${not empty cqDesign.delay ? cqDesign.delay : 5000}"/>
                                            <autopauseDisabled
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="${not empty cqDesign.autopauseDisabled ? cqDesign.autopauseDisabled : false}"
                                                fieldDescription="If checked, automatic pause when hovering the carousel is disabled."
                                                name="./autopauseDisabled"
                                                text="Disable automatic pause on hover"
                                                uncheckedValue="false"
                                                value="true"/>
                                        </items>
                                    </autoplayGroup>
                                </items>
                            </columns>
                        </items>
                    </common>
                    <slides
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Slides Configuration"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <slides
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Click + to add slides"
                                        fieldLabels="Slides">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./slides">
                                            <items jcr:primaryType="nt:unstructured">
                                                <columns
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <slideId
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Slilde ID (Do not change once authored)"
                                                            name="./slideId"/>
                                                        <slideTitle
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Slilde Title"
                                                            name="./slideTitle"/>
                                                        <label
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/text"
                                                            size="S"
                                                            text="Select the icon for the slide to display as index"/>
                                                        <slideIcon
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <file
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                    autoStart="{Boolean}false"
                                                                    class="cq-droptarget"
                                                                    fileNameParameter="./slideIconName"
                                                                    fileReferenceParameter="./slideIconName"
                                                                    mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                                    multiple="{Boolean}false"
                                                                    name="./mobileFile"
                                                                    title="Upload Icon for the slide"
                                                                    uploadUrl="${suffix.path}"
                                                                    useHTML5="{Boolean}true"/>
                                                            </items>
                                                        </slideIcon>
                                                        <skipSlide
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="false"
                                                            fieldDescription="If checked, this slide will be skipped from displaying."
                                                            name="./skipSlide"
                                                            text="Skip Slide"
                                                            uncheckedValue="false"
                                                            value="true"/>
                                                    </items>
                                                </columns>
                                            </items>
                                        </field>
                                    </slides>
                                </items>
                            </columns>
                        </items>
                    </slides>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
