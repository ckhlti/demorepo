<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Product Comparison Dialog"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[coe.components.pcc.author.editor]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container"
        margin="{Boolean}false">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}[false]">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:hideChildren="[properties]">
                    <common
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <componentid
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Component Id"
                                        fieldLabel="Component Id"
                                        name="./componentId"
                                        required="{Boolean}true"/>
                                    <uniqueclassname
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Enter CSS Classname to be added to the component wrapper"
                                        fieldLabel="Unique Class Name"
                                        name="./uniqueClassName"/>
                                    <arialabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="ADA compliance hover state"
                                        fieldLabel="Text for screen reader [Accessibility]"
                                        name="./ariaLabel"
                                        required="{Boolean}false"/>
                                    <features
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Click Add to create features"
                                        fieldLabel="Product Features"
                                        id="featureMulti"
                                        required="{Boolean}false">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            emptyText="Feature Details"
                                            name="./features">
                                            <items jcr:primaryType="nt:unstructured">
                                                <columns
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <name
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Feature Name"
                                                            id="featureName"
                                                            name="./featureName"/>
                                                    </items>
                                                </columns>
                                            </items>
                                        </field>
                                    </features>
                                    <type
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        emptyText="Select feature type"
                                        fieldDescription="Choose type of feature"
                                        fieldLabel="Feature Type"
                                        id="category"
                                        name="./type">
                                        <items jcr:primaryType="nt:unstructured">
                                            <link
                                                jcr:primaryType="nt:unstructured"
                                                text="Link"
                                                value="link"/>
                                            <content
                                                jcr:primaryType="nt:unstructured"
                                                text="Content"
                                                value="content"/>
                                            <fragment
                                                jcr:primaryType="nt:unstructured"
                                                text="Fragment"
                                                value="fragment"/>
                                        </items>
                                    </type>
                                </items>
                            </columns>
                        </items>
                    </common>
                    <behavior
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Configuration"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <products
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Click Add to create product details"
                                        fieldLabel="Products"
                                        required="{Boolean}false">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            emptyText="Product Details"
                                            name="./products">
                                            <items jcr:primaryType="nt:unstructured">
                                                <columns
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <name
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Product Name"
                                                            name="./name"/>
                                                        <summary
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Summary"
                                                            name="./summary"/>
                                                        <ctatext
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="CTA Text"
                                                            name="./ctatext"/>
                                                        <ctatarget
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="CTA Target"
                                                            name="./ctaTarget"/>
                                                        <features
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                            composite="{Boolean}true"
                                                            fieldDescription="Click Add to create features"
                                                            fieldLabel="Product Features"
                                                            required="{Boolean}false">
                                                            <field
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                                                emptyText="Select feature details"
                                                                name="./featureDetails">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <columns
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <featuretype
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                                emptyText="Select feature type"
                                                                                fieldDescription="Choose type of feature"
                                                                                fieldLabel="Feature Type"
                                                                                name="./feature_type"/>
                                                                            <desc
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                fieldLabel="Description"
                                                                                name="./featureDescription"/>
                                                                        </items>
                                                                    </columns>
                                                                </items>
                                                            </field>
                                                        </features>
                                                    </items>
                                                </columns>
                                            </items>
                                        </field>
                                    </products>
                                </items>
                            </columns>
                        </items>
                    </behavior>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
