<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="CTA Button"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container"
        margin="{Boolean}false">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}[false]">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:hideChildren="[properties]">
                    <common
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <componentid
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Component Id"
                                        fieldLabel="Component Id"
                                        name="./componentId"
                                        required="{Boolean}true"/>
                                    <uniqueclassname
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Enter CSS Classname to be added to the component wrapper"
                                        fieldLabel="Unique Class Name"
                                        name="./uniqueClassName"/>
                                    <arialabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="ADA compliance hover state"
                                        fieldLabel="Text for screen reader [Accessibility]"
                                        name="./ariaLabel"
                                        required="{Boolean}false"/>
                                </items>
                            </columns>
                        </items>
                    </common>
                    <behavior
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Configuration"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <function
                                        granite:class="cq-dialog-dropdown-showhide"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Select the CTA Function"
                                        fieldLabel="Function"
                                        name="./function"
                                        required="{Boolean}false">
                                        <items jcr:primaryType="nt:unstructured">
                                            <cta
                                                jcr:primaryType="nt:unstructured"
                                                text="CTA"
                                                value="cta"/>
                                            <modaltrigger
                                                jcr:primaryType="nt:unstructured"
                                                text="Modal Trigger"
                                                value="trigger"/>
                                        </items>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            cq-dialog-dropdown-showhide-target=".function-show-hide"/>
                                    </function>
                                    <appearance
                                        granite:class="cq-dialog-dropdown-showhide"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="How should the CTA be displayed"
                                        fieldLabel="Appearance"
                                        name="./appearance"
                                        required="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <button
                                                jcr:primaryType="nt:unstructured"
                                                text="Button"
                                                value="button"/>
                                            <anchor
                                                jcr:primaryType="nt:unstructured"
                                                text="Anchor Link"
                                                value="anchor"/>
                                            <icon
                                                jcr:primaryType="nt:unstructured"
                                                text="Icon"
                                                value="icon"/>
                                        </items>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            cq-dialog-dropdown-showhide-target=".appearance-show-hide"/>
                                    </appearance>
                                    <alignment
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Select the alignment of the button"
                                        fieldLabel="Alignment"
                                        name="./alignment"
                                        required="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <left
                                                jcr:primaryType="nt:unstructured"
                                                text="Left"
                                                value="left"/>
                                            <right
                                                jcr:primaryType="nt:unstructured"
                                                text="Right"
                                                value="right"/>
                                            <center
                                                jcr:primaryType="nt:unstructured"
                                                text="Center"
                                                value="center"/>
                                        </items>
                                    </alignment>
                                    <ctabuttonlink
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <buttontext
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Button Text"
                                                fieldLabel="CTA Text"
                                                name="./buttonText"
                                                required="{Boolean}false"/>
                                        </items>
                                    </ctabuttonlink>
                                    <targetmodalset
                                        granite:class="hide function-show-hide"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <targetmodal
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Modal Component ID"
                                                fieldLabel="Modal Component ID"
                                                name="./modalID"
                                                required="{Boolean}false"/>
                                        </items>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="trigger"/>
                                    </targetmodalset>
                                    <targeturlset
                                        granite:class="hide function-show-hide"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <targeturl
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                fieldDescription="Target URL to link to"
                                                fieldLabel="Target URL"
                                                name="./targetUrl"
                                                required="{Boolean}false"/>
                                            <target
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select Target Window Type"
                                                fieldLabel="Target"
                                                name="./target"
                                                required="{Boolean}false">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <samewindow
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Same window"
                                                        value="_self"/>
                                                    <newwindow
                                                        jcr:primaryType="nt:unstructured"
                                                        text="New window"
                                                        value="_blank"/>
                                                </items>
                                            </target>
                                            <buttonicon
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Icon class to display as part of button/link"
                                                fieldLabel="Icon to display in button"
                                                name="./buttonIcon"
                                                required="{Boolean}false"/>
                                        </items>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="cta"/>
                                    </targeturlset>
                                    <ctaicon
                                        granite:class="hide appearance-show-hide"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <iconclass
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Icon Class"
                                                fieldLabel="Icon Class"
                                                name="./iconClass"
                                                required="{Boolean}true"/>
                                        </items>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="icon"/>
                                    </ctaicon>
                                    <buttonColors
                                        granite:class="hide appearance-show-hide"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <backgroundColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                fieldLabel="Background Color"
                                                name="./backgroundColor"
                                                showDefaultColors="{Boolean}false"
                                                showProperties="{Boolean}true"
                                                showSwatches="{Boolean}true">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="core/wcm/components/commons/datasources/allowedcolorswatches/v1"/>
                                            </backgroundColor>
                                            <foregroundcolor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                fieldLabel="Font Color"
                                                name="./fontColor"
                                                showDefaultColors="{Boolean}false"
                                                showProperties="{Boolean}true"
                                                showSwatches="{Boolean}true">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="core/wcm/components/commons/datasources/allowedcolorswatches/v1"/>
                                            </foregroundcolor>
                                        </items>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="button"/>
                                    </buttonColors>
                                </items>
                            </columns>
                        </items>
                    </behavior>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
