<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Video Player"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-list__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <listSettings
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <componentid
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Component Id"
                                                fieldLabel="Component Id"
                                                name="./componentId"
                                                required="{Boolean}true"/>
                                            <uniqueclassname
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter CSS Classname to be added to the component wrapper"
                                                fieldLabel="Unique Class Name"
                                                name="./uniqueClassName"/>
                                            <videoSourceType
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select the video source type"
                                                fieldLabel="Video Source Type"
                                                name="./videoSourceType">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <none
                                                        jcr:primaryType="nt:unstructured"
                                                        checked="{Boolean}true"
                                                        text="Select the source type"
                                                        value=""/>
                                                    <dam
                                                        jcr:primaryType="nt:unstructured"
                                                        text="DAM"
                                                        value="dam"/>
                                                    <youtube
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Youtube"
                                                        value="youtube"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".videoSourceType-show-hide"/>
                                            </videoSourceType>
                                            <dampath
                                                granite:class="hide videoSourceType-show-hide "
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="dam"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <dam
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                        fieldDescription="Select DAM Video"
                                                        fieldLabel="Select Video Path"
                                                        name="./damvideopath"
                                                        rootPath="/content/dam/"/>
                                                    <loop
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        name="./loop"
                                                        text="Enable Loop"
                                                        value="true"/>
                                                    <autoplay
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        name="./autoplay"
                                                        text="Enable Auto Play"
                                                        value="true"/>
                                                    <controlbar
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        name="./controlbar"
                                                        text="Hide control bar"
                                                        value="true"/>
                                                </items>
                                            </dampath>
                                            <youtubepath
                                                granite:class="hide videoSourceType-show-hide "
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="youtube"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <youtube
                                                        granite:class="hide videoSourceType-show-hide "
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Enter Youtube video id"
                                                        fieldLabel="Enter Youtube Video ID"
                                                        name="./videoyoutubeurl">
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            showhidetargetvalue="youtube"/>
                                                    </youtube>
                                                </items>
                                            </youtubepath>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </listSettings>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
