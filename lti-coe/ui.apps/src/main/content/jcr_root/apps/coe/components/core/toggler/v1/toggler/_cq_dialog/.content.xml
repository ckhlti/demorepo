<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="CTA Button"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container"
        margin="{Boolean}false">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}[false]">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:hideChildren="[properties]">
                    <common
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <componentid
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Component Id"
                                        fieldLabel="Component Id"
                                        name="./componentId"
                                        required="{Boolean}true"/>
                                    <uniqueclassname
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Enter CSS Classname to be added to the component wrapper"
                                        fieldLabel="Unique Class Name"
                                        name="./uniqueClassName"/>
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Title for the accordion"
                                        fieldLabel="Title"
                                        name="./title"
                                        required="{Boolean}false"/>
                                    <backgroundColor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                        fieldLabel="Background Color"
                                        name="./backgroundColor"
                                        showDefaultColors="{Boolean}false"
                                        showProperties="{Boolean}true"
                                        showSwatches="{Boolean}true">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="core/wcm/components/commons/datasources/allowedcolorswatches/v1"/>
                                    </backgroundColor>
                                    <foregroundcolor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                        fieldLabel="Font Color"
                                        name="./fontColor"
                                        showDefaultColors="{Boolean}false"
                                        showProperties="{Boolean}true"
                                        showSwatches="{Boolean}true">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="core/wcm/components/commons/datasources/allowedcolorswatches/v1"/>
                                    </foregroundcolor>
                                    <downArrowLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/text"
                                        text="icon for close button"/>
                                    <closeIconImage
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <file
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fileNameParameter="./closeIconName"
                                                fileReferenceParameter="./closeIconFileReference"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./closeIconFile"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                        </items>
                                    </closeIconImage>
                                </items>
                            </columns>
                        </items>
                    </common>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
